# App
APP_HOST=0.0.0.0
APP_PORT=8080
APP_BASE=https://iam.example.com                    # public base url for links (use HTTPS)

# DB (SQLite for PoC / local)
DATABASE_URL=sqlite:///./data/iam.db                # production: postgresql://user:pass@host:5432/iam

# Keycloak
KEYCLOAK_SERVER_URL=https://keycloak.example.com/
KEYCLOAK_REALM=master
KEYCLOAK_CLIENT_ID=email-automation-client
KEYCLOAK_CLIENT_SECRET=YOUR_KEYCLOAK_CLIENT_SECRET

# Mail (Gmail App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=you@example.com
SMTP_PASS=YOUR_APP_PASSWORD_OR_SMTP_SECRET

# Token secret (HMAC). For production, use RS256 instead and configure keys.
TOKEN_SECRET=change_me_to_a_long_random_secret
TOKEN_EXPIRY_SECONDS=604800   # 7 days

# Reminders
REMINDER_HOURS=48
REMINDER_CHECK_INTERVAL_MINUTES=60

# Logging
LOG_LEVEL=INFO
